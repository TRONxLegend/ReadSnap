{
    "name": "ReadSnap",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Summarize any blog or article on the web instantly using AI.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.jpg",
      "default_title": "Summarize this page with ReadSnap"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": ["<all_urls>"],
    "options_page": "options.html",
    "web_accessible_resources": [
      {
        "resources": ["styles.css", "scripts/injected.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  